{
  "name": "@butler/monorepo",
  "version": "1.0.2",
  "description": "Some features Discord BOT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "npm run start:glitch",
    "start:glitch": "npm run redis-start && npm run build && npm start --workspaces --if-present",
    "build": "tsc -b . -v",
    "dev": "npm run dev --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "redis-start": "/app/bin/redis-server /app/redis.conf"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ver-1000000/butler.git"
  },
  "author": "akai <@Ver1000000000>",
  "license": "MIT",
  "devDependencies": {
    "@types/ioredis": "^4.27.5",
    "@types/node": "^16.10.2",
    "@types/node-cron": "^2.0.4",
    "@types/node-fetch": "^2.5.12",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": "16.x"
  },
  "keywords": [
    "node",
    "typescript",
    "discord.js",
    "glitch",
    "heroku"
  ]
}
